root = true

# Applies to all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true

# Java-specific rules
[*.java]
indent_size = 4
tab_width = 4

# Shell scripts - critical for Docker line endings
[*.sh]
end_of_line = lf
